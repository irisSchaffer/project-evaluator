{
	"extends": ["airbnb", "prettier"],
	"plugins": ["react", "jsx-a11y", "import", "prettier"],
	"rules": {
		"indent": [2, "tab", {"SwitchCase": 1}],
	    "no-tabs": 0,

		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 4,
				"semi": false,
				"singleQuote": true
			}
		],

		"import/no-extraneous-dependencies": 0,

		"react/jsx-indent": [2, "tab"],
		"react/jsx-indent-props": [2, "tab"],
		"react/prop-types": "off"
	},
	"settings": {
		"import/core-modules": []
	},
	"globals": {
		"graphql": true
	},
	"env": {
		"browser": true
	}
}
